<%= form_for(@motorcycle) do |f| %>
  <div class="field">
    <%= f.label :make %><br />
    <%= f.text_field :make %>
  </div>
  <div class="field">
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :cc, 'CC' %><br />
    <%= f.number_field :cc %>
  </div>
  <div class="field">
    <%= f.label :style %><br />
    <%= f.select :style, @style %>
  </div><br />
  <div class="actions">
    <%= f.submit %>
  </div>

<%end%>
