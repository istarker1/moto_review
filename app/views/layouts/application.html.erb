<!DOCTYPE html>
<html>
  <head>
    <title>MotoReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="top-bar">
      <%= link_to "4 Wheels Good, Two Wheels Better", motorcycles_path, :class => "title" %>
      <% if current_user %>
        <%= "Hello #{current_user.first_name}!" %>
        <%= link_to "Edit Account", edit_user_registration_path %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete,
          data: { confirm: "Are you sure?" }%>
      <% else %>
        <%= link_to "Sign In", new_user_session_path %>
        <%= link_to "Sign Up", new_user_registration_path %>
      <% end %>
      <h2>All motorcycles are equal, but some motorcycles are more equal than others </h2>
      <br>

      <%= form_tag(motorcycles_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search Motorcycles" %>
          <%= submit_tag "Search", :name => nil %>
      <% end %>

    </div>
    <%= yield %>
  </body>
</html>
